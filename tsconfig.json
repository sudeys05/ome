{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*"]
}
